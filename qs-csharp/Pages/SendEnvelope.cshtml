@page
@model qs_csharp.Pages.SendEnvelopeModel
@{
    ViewData["Title"] = "SendEnvelope";
}

@if (string.IsNullOrEmpty(ViewData["results"] as string))
{

    <form method="post">
        <input type="text" placeholder="E-mail" asp-for="EnvelopeInfo.Name" value="@ViewData["nomeDestinatario"]"
               style="width:100%;height:2em;font:bold 1.5em arial;margin: 0.5em;" />

        <input type="email" id="IdEmail" placeholder="E-mail" asp-for="EnvelopeInfo.Email" value="@ViewData["emailDestinatario"]"
               style="width:100%;height:2em;font:bold 1.5em arial;margin: 0.5em;" />

        <input type="text" id="IdEmail" placeholder="Assunto do e-mail" asp-for="EnvelopeInfo.AssuntoEmail" value="@ViewData["AssuntoEmail"]"
               style="width:100%;height:2em;font:bold 1.5em arial;margin: 0.5em;" />

        <input type="submit" value="Send the document for signature!"
               style="width:20em;height:2em;background:#1f32bb;color:white;font:bold 1.5em arial;margin: 3em;" />
    </form>

}
else
{
    <h4 style="margin-top:3em;">@ViewData["results"]</h4>
    <a href="~/">Continue</a>
}


