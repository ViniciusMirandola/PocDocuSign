@page
@model qs_csharp.Pages.SendEnvelopeWithFilesModel
@{
    ViewData["Title"] = "SendEnvelopeWithFiles";
}

@if (string.IsNullOrEmpty(ViewData["results"] as string))
{

    <form method="post" enctype="multipart/form-data">
        <input type="text" placeholder="Modelo ID" asp-for="EnvelopeTemplateFileInfo.ModeloId" value="@ViewData["TemplateId"]"
               style="width:100%;height:2em;font:bold 1.5em arial;margin: 0.5em;" />

        <input type="text" placeholder="E-mail" asp-for="EnvelopeTemplateFileInfo.Name" value="@ViewData["nomeDestinatario"]"
               style="width:100%;height:2em;font:bold 1.5em arial;margin: 0.5em;" />

        <input type="email" placeholder="E-mail" asp-for="EnvelopeTemplateFileInfo.Email" value="@ViewData["emailDestinatario"]"
               style="width:100%;height:2em;font:bold 1.5em arial;margin: 0.5em;" />

        <input type="text" placeholder="Assunto do e-mail" asp-for="EnvelopeTemplateFileInfo.AssuntoEmail" value="@ViewData["AssuntoEmail"]"
               style="width:100%;height:2em;font:bold 1.5em arial;margin: 0.5em;" />


        <input asp-for="EnvelopeTemplateFileInfo.UploadAnexo1" type="file" class="form-control" style="height:auto" />
        <input asp-for="EnvelopeTemplateFileInfo.UploadAnexo2" type="file" class="form-control" style="height:auto" />
        <input asp-for="EnvelopeTemplateFileInfo.UploadAnexo3" type="file" class="form-control" style="height:auto" />

        <input type="submit" value="Send"
               style="width:20em;height:2em;background:#1f32bb;color:white;font:bold 1.5em arial;margin: 3em;" />
    </form>

}
else
{
    <h4 style="margin-top:3em;">@ViewData["results"]</h4>
    <a href="~/">Continue</a>
}


